// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id              Int    @id @default(autoincrement())
  user_name       String @unique
  password        String
  name            String
  aggregate_score Int
  quiz_count      Int
}

model quizzes {
  id             Int      @id @default(autoincrement())
  player_id      Int
  topic_id       Int
  subtopic_id    Int
  date_time      DateTime
  quiz_completed Boolean
}

model quiz_questions {
  id            Int     @id @default(autoincrement())
  quiz_id       Int
  question_id   Int
  player_answer String
  answer_value  Boolean
}

model questions {
  id             Int    @id @default(autoincrement())
  difficulty     String
  question       String
  correct_answer String
  fun_fact       String
  topic_id       Int
  subtopic_id    Int
  answer_a       String
  answer_b       String
  answer_c       String
  answer_d       String
}

model top_subtopics {
  id           Int @id @default(autoincrement())
  player_id    Int
  subtopic1_id Int
  subtopic2_id Int
  subtopic3_id Int
}

model topics {
  id   Int    @id @default(autoincrement())
  name String
}

model subtopics {
  id   Int    @id @default(autoincrement())
  name String
}

model topic_connections {
  topic_id    Int @id @default(autoincrement())
  subtopic_id Int
}
